<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"/>

  <!-- send robot urdf to param server -->
  <param name="robot_description"
         command="$(find xacro)/xacro.py '$(find osrf_gear)/launch/ur10/ur10_with_vacuum_gripper.urdf.xacro' use_velocity_interface:=true" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model"
        args="
          -urdf
          -param robot_description
          -model robot
          -J shoulder_pan_joint 0
          -J shoulder_lift_joint -1.13
          -J elbow_joint 1.51
          -J wrist_1_joint 3.77
          -J wrist_2_joint -1.51
          -J wrist_3_joint 0
          -z 0.1
          -unpause"
        respawn="false" output="screen" />

  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <!-- <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur10_effort.yaml" command="load"/> -->
  <rosparam file="$(find osrf_gear)/launch/ur10/arm_controller_ur10_custom.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager"
        args="spawn arm_controller" respawn="false" output="screen"/>

</launch>
